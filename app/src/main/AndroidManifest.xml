<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nosorae.labs">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LabsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyAndroidLabs.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".background.service.ServiceActivity"
            android:exported="true">
        </activity>


        <activity
            android:name=".di_test.hilt.presentation.coin_detail.CoinDetailActivity"
            android:exported="true" />
        <activity
            android:name=".di_test.hilt.presentation.coin_list.CoinListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.compose.ConstraintLayoutActivity"
            android:exported="true"/>
        <activity
            android:name=".ui.compose.ListActivity"
            android:exported="true" />
        <activity
            android:name=".ui.compose.MainActivity"
            android:exported="true"
            android:label="@string/app_name" />

        <receiver
            android:name=".background.broadcast_receiver.LabsBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.nosorae.labs.MY_NOTIFICATION" />
                <action android:name="android.intent.action.INPUT_METHOD_CHANGED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".background.service.TimerService"
            android:exported="false" />
    </application>

</manifest>